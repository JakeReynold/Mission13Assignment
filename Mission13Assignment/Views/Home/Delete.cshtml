@{
}

@model Bowler

<div class="text-center">
    <h2>Delete Confirmation</h2>
    <h3>Are you sure you want to delete @Model.BowlerFirstName @Model.BowlerLastName from the Big Balling Bowlers?</h3>

    <form method="post" asp-controller="Home" asp-action="Delete">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>

        <input type="hidden" asp-for="BowlerID" />

    </form>
</div>